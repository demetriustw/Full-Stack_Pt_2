<!DOCTYPE html>
<head>
  <title>Todo App</title>
  <link rel="stylesheet" href="/static/stylesheets/style.css" type="text/css" />
  <link
    href="https://fonts.googleapis.com/css?family=Baloo+Bhai%7CCandal%7CChewy&display=swap"
    rel="stylesheet"
  />
  <link
    rel="stylesheet"
    href="https://use.fontawesome.com/releases/v5.8.2/css/all.css"
    integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay"
    crossorigin="anonymous"
  />
  <script>
    function GetValue() {
      var myarray = new Array(
        "Draw",
        "paint",
        "exercise",
        "challenge yourself",
        "wright a story",
        "do something to laugh",
        "make puns"
      );
      var random = myarray[Math.floor(Math.random() * myarray.length)];
      //alert(random);
      document.getElementById("message").innerHTML = random;
    }
  </script>
  <!-- <link rel="stylesheet" href="../public/stylesheets/style.css" /> -->
</head>
<body>
  <div class="todo-container">
    <h2>To-Do List</h2>
    <div class="todo">
      <form action="/" method="POST" class="todo-header">
        <input type="text" name="content" />
        <button type="submit"><span class="fas fa-plus"></span></button>
      </form>
      <ul class="todo-list">
        <% todoTasks.forEach(details => { %>
        <li class="todo-list-item">
          <div class="todo-list-item-name"><%= details.content %></div>
          <a href="/edit/<%= details._id %>" class="edit">
            <span class="fas fa-edit"></span>
          </a>
          <a href="/remove/<%= details._id %>" class="remove">
            <span class="fas fa-times"></span>
          </a>
        </li>
        <% }) %>
      </ul>
    </div>
  </div>
  <div class="what-container">
    <h2>What should you do?</h2>
    <div class="todo">
      <ul class="todo-list">
        <a
          type="button"
          id="btnSearch"
          value="Search"
          onclick="GetValue();"
          value="Get Idea"
          >Get Ideas</a
        >
        <p id="message"></p>
      </ul>
    </div>
  </div>
</body>
